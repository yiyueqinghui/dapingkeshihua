* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  height: 100%;
}

/* 图标样式 */
.iconfont {
  color: #585151;
}

.icon_ffffff {
  color: #ffffff;
}
.self_scroll{
  overflow-y: auto;
}
/* 滚动条样式 */
.self_scroll::-webkit-scrollbar {
  width: 6px;
  height:6px;
}

/* 修改 滚动条的 下面 的 样式 */
.self_scroll::-webkit-scrollbar-track {
  background-color: transparent;
}

/* 修改 滑块 */
.self_scroll::-webkit-scrollbar-thumb {
    border-radius: 4em;
    background-color: rgba(144,146,152,.8);
}
/* 配制区域公共样式 */
.form_common{
  padding-left:5px;
  padding-right:5px;
}
.form_common .el-form-item__label{
  color:#ffffff;
}
.form_common .el-input__inner{
  background-color: transparent;
  border: 1px solid #6b6b6d;
  color: #c5c5c7;
}
.show_color{
  display: inline-block;
  width: 100%;
  vertical-align: top;
}
.select_color{
  position: absolute!important;
  display: inline-block!important;
  right: 0px;
  top: 0;
}
.select_color .el-color-picker__trigger{
  border:none;
}

